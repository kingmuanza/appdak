<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    tools:context=".PosteDetailActivity">

    <TextView
        android:id="@+id/poste_detail_libelle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nom du poste"
        android:textSize="32dp"
        android:layout_marginBottom="4dp"
        />

    <TextView
        android:id="@+id/poste_detail_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID du vigile"
        android:textSize="18dp"
        android:layout_marginBottom="4dp"
        />
    <TextView
        android:id="@+id/poste_detail_coordonnees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coordonnées géographiques"
        android:textSize="18dp"
        android:layout_marginBottom="16dp"
        />

    <Button
        android:id="@+id/poste_detail_get_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prendre la position actuellle"
        />
    <Button
        android:id="@+id/poste_detail_ouvrir_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voir sur Google Map"
        />
</LinearLayout>